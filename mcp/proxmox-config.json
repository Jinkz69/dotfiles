    "available_tools": [
      {
        "name": "proxmox-cluster-resources",
        "description": "Get detailed cluster resources information",
        "parameters": []
      },
      {
        "name": "proxmox-cluster-status", 
        "description": "Get cluster status and resources",
        "parameters": []
      },
      {
        "name": "proxmox-container-status",
        "description": "Get the status of a specific container",
        "parameters": [
          {
            "name": "node",
            "type": "string",
            "required": true,
            "description": "Node name (e.g., prox01)"
          },
          {
            "name": "vmid",
            "type": "string", 
            "required": true,
            "description": "Container ID"
          }
        ]
      },
      {
        "name": "proxmox-list-containers",
        "description": "List all containers (LXC) on a Proxmox node",
        "parameters": [
          {
            "name": "node",
            "type": "string",
            "required": true,
            "description": "Node name (e.g., prox01)"
          }
        ]
      },
      {
        "name": "proxmox-list-vms",
        "description": "List all virtual machines on a Proxmox node", 
        "parameters": [
          {
            "name": "node",
            "type": "string",
            "required": true,
            "description": "Node name (e.g., prox01)"
          }
        ]
      },
      {
        "name": "proxmox-node-status",
        "description": "Get the status of a Proxmox node",
        "parameters": [
          {
            "name": "node",
            "type": "string",
            "required": true, 
            "description": "Node name (e.g., prox01)"
          }
        ]
      },
      {
        "name": "proxmox-vm-status",
        "description": "Get the status of a specific VM",
        "parameters": [
          {
            "name": "node",
            "type": "string",
            "required": true,
            "description": "Node name (e.g., prox01)"
          },
          {
            "name": "vmid",
            "type": "string",
            "required": true,
            "description": "VM ID"
          }
        ]
      }
    ],
    "security": {
      "credentials_stored_in": "warp_secure_storage",
      "api_authentication": "api_token",
      "network_access_required": true,
      "notes": "Credentials are managed by Warp and not backed up to version control"
    },
    "backup_strategy": {
      "configuration": "documented_in_git",
      "credentials": "managed_by_warp",
      "restore_method": "manual_reconfiguration"
    }
